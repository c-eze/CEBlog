<!DOCTYPE html>
<html lang="en">

<head>
	<meta charset="utf-8" />
	<meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
	<meta name="description" content="" />
	<meta name="author" content="" />

	<title>@ViewData["Title"] - The Blog Project</title>

	<link rel="icon" type="image/x-icon" href="~/favicon.ico" />


	<!-- Font Awesome icons (free version)-->
	<script src="//kit.fontawesome.com/5d47333ff2.js" crossorigin="anonymous"></script>

	<!-- Google fonts-->
	<link href="//fonts.googleapis.com/css?family=Lora:400,700,400italic,700italic" rel="stylesheet" type="text/css" />
	<link href="//fonts.googleapis.com/css?family=Open+Sans:300italic,400italic,600italic,700italic,800italic,400,300,600,700,800" rel="stylesheet" type="text/css" />

	<!-- Reference Summernote-->
	<link href="~/css/summernote-bs4.min.css" rel="stylesheet" />

	<!-- Core theme CSS (includes Bootstrap)-->
	<!-- link href="~/css/styles.css" rel="stylesheet" /-->

	<link href="~/css/custom.css" rel="stylesheet" />

	<!-- Summernote insert-->
	<link href="//cdn.jsdelivr.net/npm/summernote@0.8.18/dist/summernote-lite.min.css" rel="stylesheet">

	<!-- Bootstrap CSS -->
	<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
</head>

<body>

	<!-- Navigation-->
	<nav class="navbar navbar-expand-md navbar-light" id="mainNav2">
		<div class="container px-4 px-lg-5">
			<a class="navbar-brand" asp-controller="Home" asp-action="Index">Start Bootstrap</a>
			<button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarResponsive" aria-controls="navbarResponsive" aria-expanded="false" aria-label="Toggle navigation">
				Menu
				<i class="fas fa-bars"></i>
			</button>
			<div class="collapse navbar-collapse" id="navbarResponsive">
				<ul class="navbar-nav ms-auto py-4 py-lg-0">
					<li class="nav-item"><a class="nav-link px-lg-3 py-3 py-lg-4" asp-controller="Home" asp-action="Index">Home</a></li>
					<li class="nav-item"><a class="nav-link px-lg-3 py-3 py-lg-4" asp-controller="Home" asp-action="About">About</a></li>
					<li class="nav-item"><a class="nav-link px-lg-3 py-3 py-lg-4" asp-controller="Home" asp-action="Contact">Contact</a></li>

					@if (User.IsInRole("Administrator"))
					{
						<li class="nav-item">
							<a class="nav-link px-lg-3 py-3 py-lg-4" asp-controller="Posts" asp-action="Index">Portal</a>
						</li>
					}
				</ul>
				<partial name="_LoginPartial" />

			</div>
		</div>
	</nav>  

	<!-- Main Content-->
	<main class="flex-shrink-0">
		<div class="container">
			<div class="row g-0">

				<!-- Side Bar -->
				<div class="col-3">
					<div class="text-bg-dark h-100"> 

						<nav class="nav flex-column" id="navLinks">
							<a asp-controller="Posts" asp-action="Index" class="nav-link" aria-current="page"><i class="fa-solid fa-thumbtack"></i> Posts</a>
							<a asp-controller="Comments" asp-action="Index" class="nav-link"><i class="fa-solid fa-message"></i> Comments</a>
							<a asp-controller="Users" asp-action="Index" class="nav-link"><i class="fa-solid fa-user"></i> Users</a>
						</nav>
					</div>
				</div>

				<!-- Main Content-->
				<div class="col-9">
					<div class="h-100 p-2 bg-light">
						@RenderBody()
					</div>
				</div>
			</div>
		</div>
	</main>

	<!-- Footer-->
	<footer class="border-top pb-5 pt-5">
		<div class="container px-4 px-lg-5">
			<div class="row gx-4 gx-lg-5 justify-content-center">
				<div class="col-md-10 col-lg-8 col-xl-7">
					<ul class="list-inline text-center">
						<li class="list-inline-item">
							<a href="#!">
								<span class="fa-stack fa-lg">
									<i class="fas fa-circle fa-stack-2x"></i>
									<i class="fa-brands fa-x-twitter fa-stack-1x fa-inverse"></i>
								</span>
							</a>
						</li>
						<li class="list-inline-item">
							<a href="#!">
								<span class="fa-stack fa-lg">
									<i class="fas fa-circle fa-stack-2x"></i>
									<i class="fab fa-facebook-f fa-stack-1x fa-inverse"></i>
								</span>
							</a>
						</li>
						<li class="list-inline-item">
							<a href="#!">
								<span class="fa-stack fa-lg">
									<i class="fas fa-circle fa-stack-2x"></i>
									<i class="fab fa-github fa-stack-1x fa-inverse"></i>
								</span>
							</a>
						</li>
					</ul>
					<div class="small text-center text-muted fst-italic">Copyright &copy; Your Website 2023</div>
				</div>
			</div>
		</div>
	</footer>

	<!-- Bootstrap JS -->
	<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>

	<!-- Summernote -->
	<script src="~/js/summernote-bs4.min.js"></script>

	<!-- Core theme JS-->
	<script src="~/js/scripts.js"></script>

	<!-- Sweet Alert 2-->
	<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

	<!-- Summernote insert-->
	<script src="//code.jquery.com/jquery-3.4.1.slim.min.js" integrity="sha384-J6qa4849blE2+poT4WnyKhv5vZF5SrPo0iEjwBvKU7imGFAV0wwj1yYfoRSJoZ+n" crossorigin="anonymous"></script>
	<script src="//cdn.jsdelivr.net/npm/summernote@0.8.18/dist/summernote-lite.min.js"></script>

	@await RenderSectionAsync("Scripts", required: false)

</body>
</html>


