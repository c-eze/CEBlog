                <div class="single-post-item">
                    @if (User.Identity.IsAuthenticated)
                    {
                        <div class="comment-form-wrap mb-4">
                            <h3>Leave a Reply</h3>
                            <form asp-action="Create" asp-controller="Comments" method="post" class="comment-form form-horizontal">
                                @Html.Hidden("PostId", Model.Post.Id)
                                @Html.Hidden("Slug", Model.Post.Slug)
                                <div class="comment-form-group">
                                    <div class="form-field message">
                                        <textarea id="comment" name="body" cols="30" rows="5" class="form-control comment" placeholder="Your Comment*" required=""></textarea>
                                    </div>
                                    <div class="form-field submit-btn">
                                        <button id="submit" class="default-btn text-anim" type="submit" data-text="Submit Comment">Submit Comment</button>
                                    </div>
                                </div>
                            </form>
                        </div>
                    }
                    else
                    {
                        <div class="d-grid mb-4">
                            <a asp-area="Identity" asp-page="/Account/Login" class="default-btn text-anim" data-text="Login To Add Comments">Login To Add Comments</a>
                        </div>
                    }
                   
                    <h3 id="postComments">Post Comments</h3>
                    <div class="d-grid mb-4">
                        <button class="default-btn" id="commentSection">@Model.Post.Comments.Count COMMENT(S)</button>
                    </div>                    

                    <ul class="comments-box">
                        @foreach (var comment in Model.Post.Comments.OrderByDescending(c => c.Created))
                        {
                            <li class="comment">
                                <div class="comment-inner">
                                    <div class="comment-thumb"><img src="@imageService.DecodeImage(comment.Author.ImageData, comment.Author.ContentType)" alt="@comment.Author.FullName"></div>
                                    <div class="comment-wrap">
                                        <div class="comments-meta">
                                            <h4>@comment.Author.FullName <span>@comment.Created.ToString("MM.dd.yyyy") at @comment.Created.ToString("hh:mm")</span></h4>
                                        </div>
                                        <div class="comment-area">
                                            <p>@comment.Body</p>
                                        </div>
                                    </div>
                                </div>
                            </li>
                        }                    
                    </ul>                    
                </div>
                <!--/.comment-section-->
            </div>

            <div class="col-lg-4">
                <partial name="_SidebarPartial" />
            </div>
        </div> 
    </div>
