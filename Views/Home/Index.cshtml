				</div>
				<!--.sidebar-area-->
			</div>
		</div>
	</div>
</section>
<!--/.main-post-wrap-->

@section Scripts {

	<script>
		var swalMsg = '@TempData["SweetAlert"]'
		if (swalMsg != "") {
			Swal.fire({
				icon: 'success',
				title: swalMsg,
				timer: 2500
			})
		}

		$(document).ready(function () {
			$("p").tooltip();
		});

	</script>
}