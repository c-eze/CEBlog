@using CEBlog.ViewModels
@model SubscribeTo

<section class="subscribe-section padding-bottom">
    <div class="container">
        <div class="row">
            <div class="col-lg-8 offset-lg-2">
                <div class="subscribe-page-inner">
                    <div class="subscribe-img"><img src="~/img/subscribe.png" alt="img"></div>
                    <div class="subscribe-wrap">
                        <h2>Subscribe</h2>
                        <h3>Sign up to our monthly newsletter and receive articles</h3>
                        @* <form class="subscribe-form">  *@
                        <form asp-controller="Home" asp-action="Subscribe" method="post">
                            <div class="mc-fields">
                                @* <input id="mc_email2" class="form-control" type="email" placeholder="Your Email" required data-validation-required-message="Please enter your email address."> *@
                                <input asp-for="Email" class="form-control mb-3" type="email" placeholder="Your Email" />
                                @* <button id="btnSubscribe2" type="submit" formaction="javascript:void(0)" class="default-btn text-anim" data-text="Subscribe">Subscribe</button> *@
                                <button type="submit" class="default-btn text-anim" data-text="Subscribe">Subscribe</button>
                            </div>
                            <div class="clearfix"></div>
                            <div id="mc-form-messages" class="alert" role="alert"></div>
                        </form>
                        <p>Don't worry, we don't spam.</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<!--/.subscribe-section-->

@section Scripts {
    @* <script src="~/js/subscribe.js" type="text/javascript"></script> *@
    <script>
        $(document).ready(function () {
            $("form").submit(function () {
                Swal.fire({
                    icon: "success",
                    position: "top-end",
                    showConfirmButton: false,
                    title: "Thank you for subscribing!",
                    timer: 1500
                });
            });
        }
    </script>
}